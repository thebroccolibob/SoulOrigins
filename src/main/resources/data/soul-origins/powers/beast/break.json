{
    "type": "origins:action_over_time",
    "interval": 4,
    "entity_action": {
        "type": "soul-origins:destroy_rect",
        "horizontal": 0.35,
        "up": 2.7,
        "down": 0,
        "block_condition": {
            "type": "origins:in_tag",
            "tag": "soul-origins:beast_breakable"
        }
    },
    "condition": {
        "type": "origins:and",
        "conditions": [
            {
                "type": "origins:power_active",
                "power": "*:beast/toggle"
            },
            {
                "type": "origins:or",
                "conditions": [
                    {
                        "type": "origins:moving"
                    },
                    {
                        "type": "origins:collided_horizontally"
                    }
                ]
            }
        ]
    }
}
