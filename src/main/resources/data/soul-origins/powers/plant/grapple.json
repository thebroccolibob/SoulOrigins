{
    "type": "origins:multiple",
    "target": {
        "type": "soul-origins:entity_store"
    },
    "activate": {
        "type": "origins:active_self",
        "key": "key.origins.primary_active",
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "soul-origins:entity_stored",
                "store": "soul-origins:plant/grapple_target"
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "soul-origins:stored_entity_action",
                        "store": "soul-origins:plant/grapple_target",
                        "entity_action": {
                            "type": "soul-origins:discard"
                        }
                    },
                    {
                        "type": "soul-origins:clear_entity_store",
                        "store": "soul-origins:plant/grapple_target"
                    }
                ]
            },
            "else_action": {
                "type": "origins:side",
                "side": "server",
                "action": {
                    "type": "origins:raycast",
                    "block": true,
                    "entity": false,
                    "distance": 16,
                    "fluid_handling": "none",
                    "shape_type": "collider",
                    "block_action": {
                        "type": "origins:execute_command",
                        "command": "summon minecraft:marker ~ ~ ~ {Tags:[\"grapple_target\"]}"
                    },
                    "hit_action": {
                        "type": "origins:area_of_effect",
                        "radius": 16,
                        "bientity_condition": {
                            "type": "origins:target_condition",
                            "condition": {
                                "type": "origins:and",
                                "conditions": [
                                    {
                                        "type": "origins:entity_type",
                                        "entity_type": "minecraft:marker"
                                    },
                                    {
                                        "type": "origins:command",
                                        "command": "execute if entity @s[tag=grapple_target]",
                                        "comparison": ">",
                                        "compare_to": 0
                                    }
                                ]
                            }
                        },
                        "bientity_action": {
                            "type": "soul-origins:set_entity_store",
                            "store": "soul-origins:plant/grapple_target"
                        }
                    }
                }
            }
        }
    },
    "tick": {
        "type": "origins:action_over_time",
        "interval": 1,
        "condition": {
            "type": "soul-origins:entity_stored",
            "store": "soul-origins:plant/grapple_target"
        },
        "entity_action": {
            "type": "origins:side",
            "side": "server",
            "action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:if_else",
                        "condition": {
                            "type": "soul-origins:stored_entity",
                            "store": "soul-origins:plant/grapple_target",
                            "bientity_condition": {
                                "type": "origins:distance",
                                "comparison": ">",
                                "compare_to": 4
                            }
                        },
                        "if_action": {
                            "type": "soul-origins:stored_entity_action",
                            "store": "soul-origins:plant/grapple_target",
                            "bientity_action": {
                                "type": "origins:invert",
                                "action": {
                                    "type": "soul-origins:proportional_velocity",
                                    "server": true,
                                    "client": false,
                                    "multiplier": {
                                        "x": 0.06,
                                        "y": 0.1,
                                        "z": 0.06
                                    }
                                }
                            }
                        }
                    },
                    {
                        "type": "origins:if_else",
                        "condition": {
                            "type": "soul-origins:stored_entity",
                            "store": "soul-origins:plant/grapple_target",
                            "bientity_condition": {
                                "type": "origins:distance",
                                "comparison": ">",
                                "compare_to": 32
                            }
                        },
                        "if_action": {
                            "type": "origins:and",
                            "actions": [
                                {
                                    "type": "soul-origins:stored_entity_action",
                                    "store": "soul-origins:plant/grapple_target",
                                    "entity_action": {
                                        "type": "soul-origins:discard"
                                    }
                                },
                                {
                                    "type": "soul-origins:clear_entity_store",
                                    "store": "soul-origins:plant/grapple_target"
                                }
                            ]
                        }
                    },
                    {
                        "type": "soul-origins:stored_entity_action",
                        "store": "soul-origins:plant/grapple_target",
                        "bientity_action": {
                            "type": "soul-origins:raycast_between",
                            "particle": "soul-origins:vine",
                            "offset": {
                                "x": -0.3,
                                "y": -0.2,
                                "z": 0
                            }
                        }
                    }
                ]
            }
        }
    },
    "death": {
        "type": "origins:action_on_callback",
        "entity_action_removed": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "soul-origins:stored_entity_action",
                    "store": "soul-origins:plant/grapple_target",
                    "entity_action": {
                        "type": "soul-origins:discard"
                    }
                },
                {
                    "type": "soul-origins:clear_entity_store",
                    "store": "soul-origins:plant/grapple_target"
                }
            ]
        }
    }
}
