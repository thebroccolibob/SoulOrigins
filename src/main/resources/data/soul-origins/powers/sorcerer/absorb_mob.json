{
  "type": "origins:multiple",
  "name": "Monster Manipulation",
  "description": "Press your primary key to convert monsters into Soul Orbs. When using the Soul Orb, the monster you captured will be summoned. This monster will be tamed and fight for you. (Absorbable Monsters: Zombies, Skeletons, Spiders, Creeper, Enderman, Slime)",
  "activate": {
    "type": "origins:active_self",
    "entity_action": {
      "type": "origins:side",
      "action": {
        "type": "origins:raycast",
        "distance": 8,
        "block": false,
        "entity": true,
        "shape_type": "collider",
        "fluid_handling": "none",
        "bientity_condition":  {
          "type": "origins:target_condition",
          "condition": {
            "type": "origins:in_tag",
            "tag": "soul-origins:soul_sorcerer_absorbable"
          }
        },
        "bientity_action": {
          "type": "soul-origins:health_delay",
          "multiplier": 0.5,
          "cooldown": "soul-origins:sorcerer/absorb_mob_cooldown",
          "bonus_cooldown": 20,
          "action": {
              "type": "origins:if_else",
              "condition": {
                "type": "origins:and",
                "conditions": [
                  {
                    "type": "origins:distance",
                    "comparison": "<=",
                    "compare_to": 8
                  },
                  {
                    "type": "origins:target_condition",
                    "condition": {
                      "type": "soul-origins:exists"
                    }
                  }
                ]
              },
              "if_action": {
                "type": "origins:and",
                "actions": [
                  {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "soul-origins:monster_owner"
                    },
                    "if_action": {
                        "type": "origins:actor_action",
                        "action": {
                            "type": "origins:change_resource",
                            "resource": "soul-origins:soul_meter",
                            "change": 2,
                            "operation": "add"
                        }
                    }
                  },
                  {
                    "type": "soul-origins:absorb_mob_orb"
                  },
                  {
                    "type": "soul-origins:raycast_between",
                    "particle": "minecraft:soul_fire_flame",
                    "spacing": 1
                  },
                  {
                    "type": "origins:actor_action",
                    "action": {
                      "type": "origins:and",
                      "actions": [
                        {
                          "type": "origins:play_sound",
                          "sound": "minecraft:block.fire.extinguish",
                          "volume": 0.05,
                          "pitch": 0.5
                        }
                      ]
                    }
                  }
                ]
              }
          }
        },
        "hit_action": {
          "type": "origins:play_sound",
          "sound": "minecraft:item.firecharge.use",
          "volume": 0.1,
          "pitch": 0.5
        },
        "command_at_hit": "particle minecraft:sculk_soul ~ ~0.5 ~ 0.25 0.5 0.25 0.01 20 force @a",
        "command_along_ray": "particle minecraft:soul_fire_flame",
        "command_step": 1,
        "command_along_ray_only_on_hit": true
      },
      "side": "server"
    },
    "condition": {
      "type": "origins:resource",
      "resource": "soul-origins:sorcerer/absorb_mob_cooldown",
      "comparison": "<=",
      "compare_to": 0
    }
  },
  "cooldown": {
    "type": "origins:cooldown",
    "cooldown": 2000
  }
}
